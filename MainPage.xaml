<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:skia="clr-namespace:SkiaSharp.Extended.UI.Controls;assembly=SkiaSharp.Extended.UI"
             xmlns:models="clr-namespace:Todo.Models"
             x:Class="Todo.MainPage"
             xmlns:viewmodel="clr-namespace:ToDo.Viewmodel"
             xmlns:effectsView="clr-namespace:Syncfusion.Maui.Core;assembly=Syncfusion.Maui.Core"
             Title=" Taken">

    <!--TODO: DeleteTaskCommand-->
    
    <ContentPage.BindingContext>
        <viewmodel:MainViewModel />
    </ContentPage.BindingContext>

    <Grid x:Name="TaskPage">
        <ScrollView>
            <VerticalStackLayout Margin="20, 22">
                <Border>
                    <Border.Stroke>
                        <LinearGradientBrush EndPoint="0,1">
                            <GradientStop Color="White"
                          Offset="0.1" />
                            <GradientStop Color="{StaticResource Gray950}"
                          Offset="1.0" />
                        </LinearGradientBrush>
                    </Border.Stroke>
                    <HorizontalStackLayout>
                        <Entry x:Name="addTaskEntry" TextColor="White" Text="{Binding Text}" Placeholder="Taak omschrijving" HeightRequest="50" WidthRequest="280" Margin="8, 0, 5, 0"></Entry>
                        <Button x:Name="addTaskButton" Text="+" FontSize="20" TextColor="Black" HeightRequest="50" WidthRequest="58" Command="{Binding AddTaskCommand}" Clicked="addTaskButton_Clicked"></Button>
                    </HorizontalStackLayout>
                </Border>
                <skia:SKLottieView
                            x:Name="animatedArrow"
                            Source="WhiteArrow.json"
                            HeightRequest="85"
                            WidthRequest="85"
                            RepeatCount="-1"
                            Rotation="180"
                            Margin="296, 0, 0, 0"
                            IsVisible="false"
                            IsAnimationEnabled="false">
                </skia:SKLottieView>
                <CollectionView ItemsSource="{Binding Tasks}" Margin="0, 18, 0, 0">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <SwipeView>
                                <SwipeView.RightItems>
                                    <SwipeItem
                                    x:Name="deleteTaskButton"
                                    IconImageSource="checkmark.png"
                                    Command="{Binding BindingContext.CompleteTaskCommand, Source={x:Reference TaskPage}}"
                                    CommandParameter="{Binding .}"
                                    Clicked="deleteTaskButton_Clicked"/>
                                </SwipeView.RightItems>
                                <Grid HeightRequest="45" BackgroundColor="{StaticResource Gray100}" Margin="0, 9, 0, 0">
                                    <HorizontalStackLayout>
                                        <Label Text="■" FontSize="18" Margin="10, 9, 0, 0" TextColor="Black"></Label>
                                        <Label FontSize="17" TextColor="Black" Text="{Binding Title}" FontAttributes="Bold" Margin="18, 11, 0, 0"/>
                                    </HorizontalStackLayout>
                                </Grid>
                            </SwipeView>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
